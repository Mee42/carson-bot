CarsonBot
    -global
    \- user
      -id

    --guilds
     \-guild
       -_id : id
       -leave_message
       -leave_channel

    --users
     \-user
       - _id : id (user + guild id)
       - user_id
       - guild_id
       - xp

    --gg
     \-user
       - _id : user_id
       - money
       - edu_level
       - debt
       - interest
       - coins
       - invested
       - gotten
     \-bank
       - id  :  bank
       - money

   --permissions
     \-entry
       -  _id : random
      o-  user_id
      o-  role_id
       -  guild_id
       -  permission  : <BOT_ADMIN/MOD/USER>



   --messages
    \-message
      -  _id : message_id
      -  user_id
      -  channel_id
      -  content
     o-  attachments  :   [] attachment_id
      -  hour   :  since 0:00 that day
      -  day    :  days since epoch
      -  month  :  days since epoch

  --attachments
    \-attachment
       -  _id  :  random
       -  message_id
       -  name
       -  url
  --opt
    \- entry
      -  _id  :  user_id
      -  opt  :  true/false   : true for opted in, false for opted out